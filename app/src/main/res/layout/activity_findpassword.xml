<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--登录-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1">


        <ImageView
            android:id="@+id/find_return"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back_button_black" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#111"
            android:text="找回密码" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="0dp" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c7c3c3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/icon_key" />

        <EditText
            android:id="@+id/find_oldkey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:hint="请输入原始密码" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/icon_key" />

        <EditText
            android:id="@+id/find_key_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:hint="请输入新密码" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/icon_keyopen" />

        <EditText
            android:id="@+id/find_key_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:hint="请再次输入新密码" />

    </LinearLayout>

    <Button
        android:id="@+id/find_yes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fe539d"
        android:gravity="center"
        android:onClick="login_onClik"
        android:text="确认提交"
        android:textColor="#ffffff"
        android:textSize="25dp" />




</LinearLayout>
