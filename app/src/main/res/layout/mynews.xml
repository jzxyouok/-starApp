<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/mynews_return"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back_button_black" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的消息" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="0dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d4d4d4" />


    <!-- 搭配里面的子碎片(小搭配碎片) 布局-->


    <android.support.design.widget.TabLayout
        android:id="@+id/mynews_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="#FF4081"
        app:tabSelectedTextColor="#FF4081"
        app:tabTextColor="#312b2b"></android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/mynews_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>