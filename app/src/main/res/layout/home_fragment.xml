<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 首页碎片-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:weightSum="6">


            <TextView
                android:id="@+id/home_toolbar_tv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/bottom_like_button_on"
                android:gravity="center"
                android:text="分类"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4">

                <ImageView
                    android:id="@+id/home_toolbar_image"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/icon_loading_search_null" />


                <TextView
                    android:id="@+id/home_toolbar_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@id/home_toolbar_image"
                    android:layout_marginTop="8dp"
                    android:gravity="clip_horizontal"
                    android:hint="         单品/品牌/红人" />

            </RelativeLayout>

            <TextView
                android:id="@+id/home_toolbar_tv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/button_head_massage"
                android:gravity="center"
                android:text="消息"
                android:textSize="10sp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#90938282" />


    <com.android.starapp.view.MyListView
        android:id="@+id/home_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.android.starapp.view.MyListView>


</LinearLayout>